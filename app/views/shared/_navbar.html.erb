<div class="p-3 bg-primary flex flex-row justify-between items-center">
  <% if defined? menu %>
    <i class="fa-solid fa-bars text-white"></i>
  <% elsif defined? page %>
    <%= link_to page, class: "text-white" do %>
      <i class="fa-solid fa-arrow-left-long"></i>
    <% end %>
  <% else %>
    <%= link_to :back, class: "text-white" do %>
      <i class="fa-solid fa-arrow-left-long"></i>
    <% end %>
  <% end %>

  <p class='text-white uppercase'><%= title %></p>
  <% if defined? action_id %>
    <button class="text-white" type="submit" form="<%= action_id %>"><%= action_text %></button>
  <% else %>
    <%= button_to(
      "Log Out",
      destroy_user_session_path,
      method: :delete,
      class: "text-white -ms-8"
    ) %>
  <% end %>
</div>
